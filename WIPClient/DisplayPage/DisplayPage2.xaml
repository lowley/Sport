<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WIPClient.DisplayPage.DisplayPage2"
             Title="DisplayPage2"
             x:Name="Page"
             BindingContext="{x:Reference Page}">
    
    <Grid RowDefinitions="auto, auto">

        <Label Text="{Binding Counter}" AutomationId="CounterLabel"
               Margin="5,5,5,10" HorizontalOptions="Center"/>

        <Button Text="Click me" AutomationId="CounterBtn" Grid.Row="1"
            Clicked="Button_Clicked"/>
    </Grid>
</ContentPage>