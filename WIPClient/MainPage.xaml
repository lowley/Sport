<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WIPClientVM2;assembly=WIPClientVM2"
             x:DataType="vm:MainPageVM"
             x:Class="WIPClient.MainPage">
    <ContentPage.BindingContext>
        <vm:MainPageVM />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="{Binding Zcounter}"/>

            <Button
                x:Name="CounterBtn"
                Text="Click me" 
                Command="{Binding AddOneCommand}"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
