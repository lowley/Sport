<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sport.Pages.SessionPage"
             xmlns:vm="clr-namespace:Sport.VM;assembly=ClientUtilsProject"
             x:DataType="vm:SessionVM"
             Title="SessionPage"
             x:Name="Page"
             >

    <Grid RowDefinitions="auto, auto">

        <DatePicker Date="{Binding SessionDate}" Format="dddd dd MMMM yy"
                    AutomationId="InitialDate"/>

        <TimePicker Time="{Binding SessionTime}" Format="hh\:mm"  Grid.Row="1"
                    AutomationId="InitialTime"/>

        

    </Grid>
    
    
</ContentPage>